<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="470.0" prefWidth="651.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Enterprise.gui.novel.controller.NovelController">
    <center>
        <TableView fx:id="entryTable" editable="true" onKeyPressed="#deleteRow" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="indexColumn" editable="false" maxWidth="-1.0" minWidth="30.0" prefWidth="30.0" resizable="false" sortable="false" text="Nr." />
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="fullAdd" mnemonicParsing="false" onAction="#openFullAdd" text="Kompletten Eintrag hinzufügen" />
                        <MenuItem fx:id="edit" mnemonicParsing="false" onAction="#openEdit" text="Bearbeiten" />
                        <MenuItem fx:id="delete" mnemonicParsing="false" onAction="#deleteSelected" text="Löschen" />
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox fx:id="addBox" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
            </BorderPane.margin>
            <children>
                <TextField fx:id="titleField" prefHeight="25.0" prefWidth="300.0" HBox.hgrow="ALWAYS" />
                <TextField fx:id="creatorField" prefHeight="25.0" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="addBtn" mnemonicParsing="false" onAction="#add" text="Hinzufügen" />
                <Button fx:id="editBtn" mnemonicParsing="false" onAction="#openEdit" text="Bearbeiten" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
